<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" fx:id="searchInput" prefHeight="666.0" prefWidth="635.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="healthdiaryproject.SearchPageController">
    <children>
        <Label layoutX="36.0" layoutY="30.0" text="Search page" />
        <TextField fx:id="searchData" layoutX="237.0" layoutY="408.0" promptText="e.g. June 1 2018" />
        <TableView fx:id="tableView" layoutX="36.0" layoutY="79.0" prefHeight="301.0" prefWidth="574.0">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="91.0" text="Date" />
                <TableColumn fx:id="hoursOfSleepColumn" prefWidth="61.0" text="Hrs Slept" />
                <TableColumn fx:id="weightColumn" prefWidth="49.0" text="Weight" />
                <TableColumn fx:id="bloodPressureColumn" prefWidth="72.0" text="BP" />
                <TableColumn fx:id="mealNameColumn" prefWidth="94.0" text="Meals" />
                <TableColumn fx:id="fullnessLevelColumn" prefWidth="51.0" text="Fullness" />
                <TableColumn fx:id="caloriesConsumedColumn" prefWidth="114.0" text="Calories Consumed" />
                <TableColumn fx:id="amPmColumn" prefWidth="88.0" text="AM/PM" />
                <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time" />
                <TableColumn fx:id="exerciseColumn" prefWidth="75.0" text="Exercise" />
                <TableColumn fx:id="intensityColumn" prefWidth="75.0" text="Intensity" />
                <TableColumn fx:id="durationColumn" prefWidth="75.0" text="Duration" />
                <TableColumn fx:id="caloriesBurnedColumn" prefWidth="75.0" text="Calories Burned" />
                <TableColumn fx:id="glassesOfWaterColumn" prefWidth="75.0" text="Water (glasses)" />
                <TableColumn fx:id="moodColumn" prefWidth="75.0" text="Mood" />
                <TableColumn fx:id="reflectionColumn" prefWidth="75.0" text="Reflection" />
            </columns>
        </TableView>
      
        <Label layoutX="36.0" layoutY="413.0" text="Search for Records by Date" />
        <Button fx:id="searchButton" layoutX="444.0" layoutY="454.0" mnemonicParsing="false" onAction="#searchButtonPressed" text="Search" />
        <Label fx:id="myLabel" layoutX="36.0" layoutY="58.0" text="All records shown" />
        <Label fx:id="errorLabel" layoutX="237.0" layoutY="387.0" />
      <Button layoutX="367.0" layoutY="454.0" mnemonicParsing="false" onAction="#resetSearchButtonPressed" text="Reset" />
      <Button fx:id="deleteButton" layoutX="282.0" layoutY="454.0" mnemonicParsing="false" onAction="#deleteButtonPushed" text="Delete" />
    </children>
</AnchorPane>
